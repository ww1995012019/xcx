/* pages/indexList/indexList.wxss */

.list {
  padding: 0 40rpx;
  background-color: #fff;
}

/* 商品列表 */

.goods {
  background-color: #f5f5f5;
  display: flex;
  padding: 0rpx 20rpx;
  justify-content: space-between;
  flex-wrap: wrap;
}

.goods-list {
  background-color: #fff;
  width: 48.5%;
  overflow: hidden;
  margin-top: 16rpx;
  border-radius: 20rpx;
  position: relative;
}

.lsitMode {
  position: absolute;
  width: 344rpx;
  height: 346rpx;
  background-image: url('https://ww.cry7.cn/getgoods/sw.png');
  background-repeat: no-repeat;
  background-size: 344rpx 346rpx;
  background-color: #000;
  opacity: 0.5;
  z-index: 9;
  border-radius: 20rpx;
}

.goods-list .goods-img image {
  width: 345rpx;
  height: 345rpx;
  border-radius: 20rpx;
}

.goods-list .goods-detail {
  padding: 10rpx;
}

.time-list {
  display: flex;
  
background-color:#feeff0;
border-radius:20rpx;

}

.jietuan .jietuan-info {
  width: 335rpx;
  font-size: 26rpx;
  padding: 6rpx 0;
  color: #2cd5ab;
border-radius:20rpx;
margin-top: 6rpx;
  display: block;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.goods-list .goods-detail .goods-info .info-title {
  font-size: 30rpx;
  color: #2cd5ab;
  display: block;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.goods-list .goods-detail .goods-info .info-detail {
  width: 250rpx;
  font-size: 26rpx;
  padding: 4rpx 0;
  color:#0f0f0f;
  display: block;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  text-align: center;
}

.goods-list .goods-detail .goods-price {
  display: flex;
}

.goods-list .goods-detail .goods-price .price-old {
  color: #eb5d3f;
  font-size: 30rpx;
  flex: 1;
}

.goods-list .goods-detail .goods-price .price-new {
  font-size: 40rpx;
  font-weight: bold;
}

.weight {
  height: 58rpx;
  font-size: 28rpx;
  width: 180rpx;
  color: #999;
  display: block;
  line-height: 65rpx;
}

.fenshu {
  color: #ccc;
  font-size: 24rpx;
}

.oldPrice {
  flex: 1;
  color: #ccc;
  font-size: 24rpx;
  margin-left: 6rpx;
  text-decoration: line-through;
}

.goods-list .goods-detail .goods-price image {
  width: 50rpx;
  height: 50rpx;
}

/* 购物车按钮 */

.share-btn {
  width: 100rpx;
  height: 100rpx;
  text-align: center;
  font-size: 28rpx;
  color: #fff;
  background-color: #038c48;
  border-radius: 50%;
  position: fixed;
  right: 20rpx;
  bottom: 200rpx;
  z-index: 9999;
}

.share-btn text {
  display: block;
  width: 80rpx;
  margin: 20rpx auto;
  line-height: 30rpx;
}
